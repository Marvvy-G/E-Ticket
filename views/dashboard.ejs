<%- include("partials/header") %>
<%- include("partials/sidenav") %>
        <main>    
            <header>
                <button class="menu-btn" id="menu-open">
                    <i class='bx bx-menu'></i>
                </button>
                <h5>Hello <b><%= user.firstName %></b>, welcome back!</h5>
            </header>

            <div class="separator">
                <div class="info">
                    <h3>My Dashboard</h3>
                </div>
                <div class="search">
                    <i class='bx bx-search'></i>
                    <input type="text" placeholder="Search...">
                </div>
            </div>

            <div class="analytics">
                <div class="item">
                    <div class="progress">
                        <div class="info">
                            <h5>Balance</h5>
                        </div>
                        <div><h2 class="balance">NGN <%= user.wallet[0].balance %></h2></div>
                    </div>
                    <i class='bx bx-money'></i>
                </div>
                <div class="item">
                    <div class="progress">
                        <div class="info">
                            <h5>Wallet</h5>
                            <p><%= user.wallet[0].id %></p>
                        </div>
                        <div>
                            
                            <h3 class="name"><%= user.firstName%> <%= user.lastName%></h3></div>
                    </div>
                    <i class='bx bx-wallet'></i>
                </div>
                <div class="item">
                    <div class="progress">
                        <div class="info">
                            <h5>Top Up Wallet</h5>
                            <p>Yippie</p>
                        </div>

                        <a href="/api/wallet/topup/<%=user._id%>"><div style="size: 20% ;" > <h1>+</h1>  </div></a>
                    </div>
                    <i class='bx bxs-add-to-queue'></i>
                </div>
                <div class="item">
                    <div class="progress">
                        <div class="info">
                            <h5>Buy A Ticket</h5>
                        </div>
                        <a href="/api/busTicket/getAll/<%=user._id%>"><div style="size: 20% ;" > <h1>+</h1>  </div></a>
                    </div>
                    <i class='bx bxs-car-crash'></i>
                </div>
            </div>

            <div class="separator">
                <div class="info">
                    <h3>Reciepts</h3>
                    <a href="#">View All</a>
                </div>
                <input type="date" value="2023-10-15">
            </div>

            <div class="planning">
                <div class="item">
                    <div class="left">
                        <div class="icon">
                            <i class='bx bx-book-alt'></i>
                        </div>
                        <div class="details">
                            <h5>Top Up - 18/05/2024-9:24am</h5>
                            <p>Ref: 4tgfqe495uthgn2935n30345tg</p>
                        </div>
                    </div>
                    <i class='bx bx-dots-vertical-rounded'></i>
                </div>
                <div class="item">
                    <div class="left">
                        <div class="icon">
                            <i class='bx bx-edit-alt'></i>
                        </div>
                        <div class="details">
                            <h5>Top Up - 18/05/2024-9:24am</h5>
                            <p>Ref: 4tgfqe495uthgn2935n30345tg</p>
                        </div>
                    </div>
                    <i class='bx bx-dots-vertical-rounded'></i>
                </div>
                <div class="item">
                    <div class="left">
                        <div class="icon">
                            <i class='bx bx-headphone'></i>
                        </div>
                        <div class="details">
                            <h5>Top Up - 18/05/2024-9:24am</h5>
                            <p>Ref: 4tgfqe495uthgn2935n30345tg</p>
                        </div>
                    </div>
                    <i class='bx bx-dots-vertical-rounded'></i>
                </div>
                <div class="item">
                    <div class="left">
                        <div class="icon">
                            <i class='bx bx-volume-low'></i>
                        </div>
                        <div class="details">
                            <h5>Top Up - 18/05/2024-9:24am</h5>
                            <p>Ref: 4tgfqe495uthgn2935n30345tg</p>
                        </div>
                    </div>
                    <i class='bx bx-dots-vertical-rounded'></i>
                </div>
            </div>
        </main>

        <aside class="right-section">
            <div class="top">
                <i class='bx bx-bell'></i>
                <div class="profile">
                    <div class="left">
                        <img src="/assets/profile.jpg">
                        <div class="user">
                            <h5><%= user.firstName %></h5>
                            <a href="/api/busTicket/one/<%=user._id%>">Welcome</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="separator" id="first">
                <h4>Statistics</h4>
            </div>

            <div class="stats">
                <div class="item">
                    <div class="top">
                        <p>Used Tickets</p>
                      
                    </div>
                    <div class="bottom">
                        <div class="line"></div>
                        <h3><%= usedTickets %></h3>
                    </div>
                </div>
                <div class="item">
                    <div class="top">
                        <p>Unused Tickets</p>
                        
                    </div>
                    <div class="bottom">
                        <div class="line"></div>
                        <h3><%= unusedTickets %></h3>
                    </div>
                </div>
                <div class="item">
                    <div class="top">
                        <p>All Your Bus Tickets Purchased</p>
                       
                    </div>
                    <div class="bottom">
                        <div class="line"></div>
                        <h3><%= totalTickets %></h3>
                    </div>
                </div>
                <!-- <div class="item">
                    <div class="top">
                        <p>Tasks</p>
                        <p>Finished</p>
                    </div>
                    <div class="bottom">
                        <div class="line"></div>
                        <h3>250</h3>
                    </div>
                </div> -->
            </div>

            <div class="separator">
                <h4>Profile</h4>
            </div>

            <div class="weekly">
                <div class="title">
                    <div class="line"></div>
                    <h5>Name: <%= user.firstName%> <%= user.lastName%></h5>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <div class="weekly">
                <div class="title">
                    <div class="line"></div>
                    <h5>Email: <%= user.email%></h5>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <div class="weekly">
                <div class="title">
                    <div class="line"></div>
                    <h5>Age: <%= user.age %></h5>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <div class="weekly">
                <div class="title">
                    <div class="line"></div>
                    <h5>Tel: <%= user.number %></h5>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <div class="weekly">
                <div class="title">
                    <div class="line"></div>
                    <h5>Address: <%= user.address%></h5>
                </div>
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>

        </aside>

    

<%- include("partials/footer") %>