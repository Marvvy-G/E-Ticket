<div class="mt-5 pt-3">
     <div class="row">
        <h1 style="text-align: center;">
            Registration
        </h1>

        <div style="width: 60%; margin: 30px auto; ">
            <!-- display errors -->
            <form action="/api/auth/signup" method="POST">
                <div class="form-group">
                    <label class="form-label" for="firstName">First Name </label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="firstName" 
                    placeholder="Benga" 
                    value="<%= typeof firstName != 'undefined' ? firstName: ''%>"
                    required
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="lastName">Last Name </label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="lastName" 
                    placeholder="Philip" 
                    value="<%= typeof lastName != 'undefined' ? lastName: ''%>"
                    required
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="email" 
                    placeholder="bengaphilip@xyz.com" 
                    value="<%= typeof email != 'undefined' ? email: ''%>"
                    required
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Password</label>
                    <input 
                    class="form-control" 
                    type="password" 
                    name="password" 
                    placeholder="Password" 
                    value="<%= typeof password != 'undefined' ? password: ''%>"
                    required
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="password">Confirm Password</label>
                    <input 
                    class="form-control" 
                    type="password" 
                    id="confirmPassword"
                    name="confirmPassword" 
                    placeholder="Confirm Password" 
                    required
                    >
                </div>
               
                <hr>
                <h5>Other Information</h5>
                <div class="form-group">
                    <label class="form-label" for="age">Age</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="age" 
                    placeholder="32" 
                    value="<%= typeof age != 'undefined' ? age: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="address">Address</label>
                    <input 
                    class="form-control" 
                    type="text" 
                    name="address" 
                    placeholder="Wuse 2, Abuja, Nigeria" 
                    value="<%= typeof address != 'undefined' ? address: ''%>"
                    >
                </div>
                <div class="form-group">
                    <label class="form-label" for="number">Phone Number</label>
                    <input 
                    class="form-control" 
                    name="number" 
                    placeholder="08011111111"
                    value="<%= typeof number != 'undefined' ? number: ''%>"
                    required
                     >
                </div>
                
                <br>
               <div class="form-group" >
                    <button class="btn btn-lg btn-danger btn-block">Submit</button>
               </div>
                </form>
                <a href="/">Back</a>
        </div>
     </div>
</div>

